{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2022"],

    "module": "CommonJS",
    "moduleResolution": "Node",

    /* ðŸ‘‡ baseUrl & path aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
